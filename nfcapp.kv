#:kivy 2.1.0
# レイアウト設定


<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: ""
            font_name: 'NotoSans'
            size_hint_y: 0.3

        BoxLayout:
            size_hint_y: 0.3
            Button:
                text: '貸出'
                font_size: 100
                font_name: 'NotoSans'
                on_press: root.go_to_rental_screen()

            Button:
                text: '返却'
                font_size: 100
                font_name: 'NotoSans'
                on_press: root.go_to_return_screen()
            Button:
                text: '予約'
                font_size: 100
                font_name: 'NotoSans'
                on_press: root.go_to_reserve_screen()
        Label:
            text: ""
            font_name: 'NotoSans'
            size_hint_y: 0.1

        BoxLayout:
            size_hint_y: 0.2

            Button:
                text: 'ユーザ登録'
                font_size: 50
                font_name: 'NotoSans'
                on_press: root.go_to_user_registration_screen()

            Button:
                text: '備品登録'
                font_size: 50
                font_name: 'NotoSans'
                on_press: root.go_to_item_registration_screen()
            
            Button:
                text: '登録ユーザ一覧'
                font_size: 50
                font_name: 'NotoSans'
                on_press: root.go_to_user_list_screen()
        
            Button:
                text: '登録備品一覧'
                font_size: 50
                font_name: 'NotoSans'
                on_press: root.go_to_item_list_screen()

        Label:
            text: ""
            font_name: 'NotoSans'
            size_hint_y: 0.1

